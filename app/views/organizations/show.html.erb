<br>
<a href="/groups">Dashboard</a>

<h1><%= @group.name %></h1>
<% if @group.joined_users.include? current_user  %>
<a href="/groups/<%=@group.id%>" data-method="delete">Leave Group</a>
<% else %>
<td class="td"><a href="/groups/<%=@group.id%>" data-method="post">Join</a></td>
<% end %>

<p><%= @group.desc %></p>

<b>Created by:</b>
<% if @group.user == current_user %>
<p>YOU!</p>
<% else %>
<p><%= @group.user.first_name %> <%= @group.user.last_name %></p>
<% end %>

<b>Members:</b>
<ul>
<% @users.each do |user| %>
    <li><%= user.first_name %> <%= user.last_name %></li>
<% end %>
</ul>